generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Billionaire {
  id          String           @id @default(cuid())
  name        String           @unique
  rank        Int?
  recommendations Recommendation[]
  createdAt   DateTime         @default(now())
}

model Movie {
  id              String           @id @default(cuid())
  title           String
  year            Int
  context         String
  recommendations Recommendation[]
  createdAt       DateTime         @default(now())

  @@unique([title, year])
}

model Recommendation {
  id            String       @id @default(cuid())
  billionaire   Billionaire  @relation(fields: [billionaireId], references: [id])
  billionaireId String
  movie         Movie        @relation(fields: [movieId], references: [id])
  movieId       String
  context       String       // âœ… Added this field to store the comment/context
  createdAt     DateTime     @default(now())

  @@unique([billionaireId, movieId])
}

model User {
  id        String   @id @default(uuid())
  name      String   // ðŸ‘ˆ Add this line
  email     String   @unique
  password  String
  watchlist WatchlistItem[]
  createdAt DateTime @default(now())
}

model WatchlistItem {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  title     String
  name      String
  year      Int?
  context   String?
  createdAt DateTime @default(now())
}


